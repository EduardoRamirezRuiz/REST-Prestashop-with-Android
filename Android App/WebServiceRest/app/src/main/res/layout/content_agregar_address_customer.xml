<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_agregar_address_customer"
    tools:context="mx.edu.itcelaya.webservicerest.agregar_address_customer">
    <Space
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:id="@+id/lol1"/>

    <TextView
        style=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tt_add_address"
        android:layout_below="@id/lol1"
        android:id="@+id/lol2"
        android:padding="10dp"
        android:textSize="20dp"
        android:textColor="#440404"
        android:typeface="serif">
    </TextView>

    <Space
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_below="@id/lol2"
        android:id="@+id/lmao"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lmao">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style=""
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tx_id_fiscal"
                    android:layout_weight="1">
                </TextView>

                <EditText
                    android:id="@+id/ID_fiscal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="ID fiscal"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style=""
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tx_address_name"
                    android:layout_weight="1">
                </TextView>

                <EditText
                    android:id="@+id/alias"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Nombre de la dirección"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style=""
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/firstName"
                    android:layout_weight="1">
                </TextView>

                <EditText
                    android:id="@+id/name_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Nombre de usted"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style=""
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lastName"
                    android:layout_weight="1">
                </TextView>

                <EditText
                    android:id="@+id/lastname_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Apellido de usted"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style=""
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tx_company"
                    android:layout_weight="1">
                </TextView>

                <EditText
                    android:id="@+id/company"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:hint="Empresa"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style=""
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tx_IVA"
                    android:layout_weight="1">
                </TextView>

                <EditText
                    android:id="@+id/iva"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="% de iva"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style=""
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tx_address"
                    android:layout_weight="1">
                </TextView>

                <EditText
                    android:id="@+id/address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:hint="Dirección"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style=""
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tx_cp"
                    android:layout_weight="1">
                </TextView>

                <EditText
                    android:id="@+id/zip_code"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Código postal"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style=""
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tx_city"
                    android:layout_weight="1">
                </TextView>

                <EditText
                    android:id="@+id/city"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:hint="Ciudad"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style=""
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tx_country"
                    android:layout_weight="1">
                </TextView>
                <Spinner
                    android:id="@+id/spinner_pais"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/country_arrays"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style=""
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tx_state"
                    android:layout_weight="1">
                </TextView>
                <Spinner
                    android:id="@+id/spinner_estados"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/country_arrays"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style=""
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tx_phone"
                    android:layout_weight="1">
                </TextView>

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Teléfono fijo"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style=""
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tx_mobile_phone"
                    android:layout_weight="1">
                </TextView>

                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Teléfono móvil"
                    android:layout_weight="1"/>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
